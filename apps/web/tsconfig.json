{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": ["ES2020", "DOM"]
  },
  "include": ["src/**/*.tsx", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage",
    "src/AuthMiddleware.ts",
    "src/AuthMiddleware2.ts",
    "src/AuthMiddleware3.ts",
    "src/UserControllerRouter.ts",
    "src/UserRoutes.ts",
    "src/ReportRoutes.ts"
  ]
}
